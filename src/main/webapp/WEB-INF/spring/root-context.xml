	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	<bean id="recipeService" class="org.recipes.recipes.RecipeService"/>
	<bean id="userService" class="org.recipes.users.UserService"/>
	<bean id="measurementTypeService" class="org.recipes.measurementTypes.MeasurementTypeService"/>
	<bean id="ingredientService" class="org.recipes.ingredients.IngredientService"/>
	<bean id="recipeUsesIngredientService" class="org.recipes.recipeUsesIngredient.RecipeUsesIngredientService"/>
	<bean name="expiredPasswordFilterBean" class="org.recipes.filters.ExpiredPasswordFilter"/>  
</beans>
